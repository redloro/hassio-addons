{
  "name": "Multi-Zone Audio Serial Bridge",
  "version": "0.0.1",
  "slug": "multizone-audio-serial-bridge",
  "description": Microservice exposing a REST interface for communicating with multi-zone audio controllers and amplifiers that support variations of Xantech's original RS232 serial control protocol.",
  "url": "https://github.com/rsnodgrass/hassio-addons/tree/master/xantech-serial-bridge",
  "startup": "services",
  "boot": "auto",
  "ports": {
    "8888/tcp": 8888
  },
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "auto_uart": true,
  "options": {
    "serial_tty": "/dev/ttyUSB0"
  },
  "schema": {
    "serial_tty": "match(^/dev/.*$)?"
  },
  "environment": {
    "SERIAL_BRIDGE_PORT": "8888"
  },
  "map": [
    "config:ro"
  ],
  "hassio_role": "default",
  "host_network": false,
  "gpio": true,
  "auto_uart": true,
  "devices": [ "/dev/ttyAMA0:/dev/ttyAMA0:rwm",
	       "/dev/ttyUSB0:/dev/ttyUSB0:rwm"
  	     ],
  "privileged": [ "SYS_RAWIO" ]
}
