{
  "name": "RadioRA Classic Smart Bridge",
  "version": "1.0",
  "slug": "radiora-classic-bridge",
  "description": "Add-on to run the Lutron RadioRA Classic Smart Bridge by Homemations",
  "url":"https://github.com/rsnodgrass/hassio-addons/tree/master/radiora-classic-bridge",
  "startup": "services",
  "boot": "auto",
  "ports": {
    "8333/tcp": 8333
  },
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "options": {
    "serial_tty": "/dev/ttyAMA0"
  },
  "schema": {
    "serial_tty": "match(^/dev/.*$)"
  },
  "host_network": false,
  "gpio": true,
  "auto_uart": true,
  "devices": [ "/dev/ttyAMA0:/dev/ttyAMA0:rwm" ]
#  "privileged": [ "SYS_RAWIO" ],
#  "environment": [ "SERIAL_TTY=/dev/ttyAMA0" ]
}
