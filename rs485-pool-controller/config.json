{
  "name": "RS485 Pool Controller",
  "version": "0.1.0",
  "slug": "rs485-pool-controller",
  "description": "RS485 Pool Controller for communicating with compatible pool control systems, pumps, heaters, chlorinators",
  "url": "https://github.com/rsnodgrass/hassio-addons/tree/master/rs485-pool-controller",
  "startup": "services",
  "boot": "auto",
  "ports": {
    "9801/tcp": 9801,
    "3000/tcp": 3000,
    "3001/tcp": 3001
  },
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "options": {},
  "schema": {
    "rs485_tty": "match(^/dev/.*$)?"
  },
  "host_network": false,
  "gpio": true,
  "auto_uart": true,
  "devices": [ "/dev/ttyAMA0:/dev/ttyAMA0:rwm",
	             "/dev/ttyUSB0:/dev/ttyUSB0:rwm"
  	         ],
  "privileged": [ "SYS_RAWIO" ]
}
